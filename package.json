{
	"name": "react-shake-it",
	"private": false,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
		"lint:fix": "eslint --fix \"./src/**/*.{jsx,ts,tsx}\"",
		"format": "prettier --write ./src//**/*.{ts,tsx,css} --config ./.prettierrc",
		"prepare": "husky",
		"cm": "cz"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"yarn eslint",
			"yarn format"
		]
	},
	"files": [
		"dist"
	],
	"exports": {
    ".": {
      "import": "./dist/react-shake-it.es.js",
      "require": "./dist/react-shake-it.umd.js"
    }
  },
	"main": "./dist/react-shake-it.umd.js",
  "module": "./dist/react-shake-it.es.js",
  "types": "./dist/index.d.ts",
	"devDependencies": {
		"@types/node": "^20.11.21",
		"@types/react": "^18.2.56",
		"@types/react-dom": "^18.2.19",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"@vitejs/plugin-react": "^4.2.1",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.57.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"eslint-plugin-simple-import-sort": "^12.0.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"path": "^0.12.7",
		"prettier": "^3.2.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hooks": "^1.0.1",
		"styled-components": "^6.1.8",
		"typescript": "^5.2.2",
		"vite": "^5.1.4",
		"vite-plugin-dts": "^3.7.3",
		"vite-plugin-linter": "^2.1.1",
		"vite-tsconfig-paths": "^4.3.1"
	},
  "peerDependencies": {
    "react": "16.8.0 || >=17.x",
    "react-dom": "16.8.0 || >=17.x"
  },
	"repository": {
    "type": "git",
    "url": "https://github.com/saren44/react-shake-it"
  },
  "keywords": ["react", "animation", "css", "shake", "transform"],
  "author": "kuba sarna",
  "bugs": {
    "url": "https://github.com/saren44/react-shake-it/issues"
  },
  "homepage": "https://github.com/saren44/react-shake-it#readme",
  "license": "MIT",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
